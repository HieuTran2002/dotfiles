# shortcut
alias dl="~/Downloads"
alias cf="~/.config"
alias pic="$HOME/Pictures"
alias vid="$HOME/Videos"
alias home="$HOME"
alias c="clear"
alias rg="ranger"

# app
alias nv="nvim"

# ls
alias l="lsd"
alias lsh="ls -lh -lS -r"
alias lsl="ls -ltr"

# grep
alias installed-grep="apt list --installed | grep -i "

# apt 
alias purge="sudo apt purge"
alias install="sudo apt install"
alias update="sudo apt update"


# directory
alias cd-obsidian="/media/theuser/mount/Documents/Obsidian/My Vault"
alias cd-f="/media/theuser/mount/Documents"
alias cd-d="/media/theuser/mount/Downloads"
alias cd-e="/media/theuser/mount/'NewVolume'"
alias cd-toeic="/media/theuser/mount/Documents/Documents/'TOEIC 33'"
alias cd-book="/media/theuser/mount/Documents/Documents/Book"
alias cd-wallpaper-local="/home/theuser/Pictures/wallpaper"
alias cd-wallpaper-F="/media/theuser/mount/Documents/background"
alias cd-cpp="/media/theuser/mount/Documents/Code/Cpp"
alias cd-python="/media/theuser/mount/Documents/Code/python"
alias cd-go="/media/theuser/mount/Documents/Code/go"

## code

## copy current path

# service control

# tmux redefine
alias tmux-config="tmux new-session -c ~/.config -s config"
alias tmux-main="tmux new-session -s Main"
alias tmux-cpp="tmux new-session -c /media/theuser/mount/Documents/Code/Cpp -s Cpp-with-me \; split-window -dh -p 30"
alias tmux-go="tmux new-session -c /media/theuser/mount/Documents/Code/go -s Go-with-me \; split-window -dh -p 30"
alias tmux-reattact="tmux a -t "
alias tmux-python="tmux new-session -c /media/theuser/mount/Documents/Code/python -s Python-with-me" 

# golang
alias getgo="export PATH=$PATH:/usr/local/go/bin"

# pulseaudio
alias unmute="amixer set Master unmute"

# check memory usage
alias topmem="top -o %MEM"
